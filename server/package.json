{
    "name": "server",
    "version": "1.0.0",
    "description": "A simple MERN API",
    "main": "server.js",
    "author": "Alpha",
    "license": "MIT",
    "dependencies": {
        "concurrently": "^7.1.0",
        "connect-redis": "^6.1.3",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.3",
        "mongodb": "^4.5.0",
        "mongoose": "^5.11.15",
        "numeral": "^2.0.6",
        "redis": "^4.1.0",
        "slugify": "^1.4.6"
    },

    "devDependencies": {
        "nodemon": "^2.0.7"
    },
    "engines": {
        "node": ">=14.13.0"
    },
    "scripts": {
        "dev-client":"cd ../client && npm start",
        "dev": "concurrently -n 'server,client' \"nodemon server.js\" \"npm run dev-client\"",
        "client": "cd client npm run start --prefix client",
        "prestart": "npm run build --prefix client",
        "start": "node server.js"
    }
}
